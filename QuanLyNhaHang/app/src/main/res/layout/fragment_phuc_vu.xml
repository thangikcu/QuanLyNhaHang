<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".view.fragment.PhucVuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="5dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:background="#632b8e">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list_ban"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical" />

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="38dp"
                            android:layout_height="11dp"
                            android:background="@drawable/table_button_background_serving" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:text="Đang phục vụ"
                            android:textColor="#111111"
                            android:textSize="12sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="38dp"
                            android:layout_height="11dp"
                            android:background="@drawable/table_button_background_reserved" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:text="Đặt trước"
                            android:textColor="#111111"
                            android:textSize="12sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="38dp"
                            android:layout_height="11dp"
                            android:background="@drawable/table_button_background_free" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:text="Trống"
                            android:textColor="#111111"
                            android:textSize="12sp" />
                    </TableRow>


                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_restaurant" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_thong_tin_ban" />

                <TextView
                    android:id="@+id/tv_ten_ban"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="Bàn 5"
                    android:textColor="@color/colorTextNameBan"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trang_thai"
                    android:textColor="@color/colorTextThongTinBan"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_trang_thai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="@string/trong"
                    android:textColor="@color/colorBackgroundTableFree"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </TableRow>

            <LinearLayout
                android:id="@+id/ln_thong_tin_ban"
                android:paddingTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gio_den"
                        android:textColor="@color/colorTextThongTinBan"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_gio_den"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:text="25/11/2016 06:00 PM"
                        android:textColor="@color/colorBackgroundTableFree"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </TableRow>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list_thuc_don_order"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
                <TextView
                    android:id="@+id/tv_tong_tien"
                    android:paddingTop="8dp"
                    android:text="150.000.000"
                    android:textColor="#bc0f20"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <Button
                android:id="@+id/btn_thuc_don"
                android:layout_width="58dp"
                android:layout_height="36dp"
                android:background="@drawable/ic_thuc_don" />


        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/layout_thuc_don"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end" />

</android.support.v4.widget.DrawerLayout>
