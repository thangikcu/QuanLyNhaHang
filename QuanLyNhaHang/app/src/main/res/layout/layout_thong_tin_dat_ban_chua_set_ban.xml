<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_thong_tin_dat_ban_chua_set_ban"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroudFrame"
    android:orientation="vertical"
    android:padding="@dimen/layout_padding">

    <include
        layout="@layout/layout_thong_tin_dat_ban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableRow
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp">

        <TextView
            style="@style/CommonTextView"
            android:text="@string/info_chon_ban"
            android:textColor="@color/colorTextField"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spn_ban"
            android:layout_marginLeft="16dp"
            android:scrollbars="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </TableRow>


</LinearLayout>