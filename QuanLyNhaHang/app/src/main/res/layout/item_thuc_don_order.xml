<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_item_thuc_don_order"
    android:gravity="center_vertical"
    android:padding="2dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_thuc_don"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_food" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:text="Tranh muối không đường"
        android:textColor="@color/colorTextTenMon"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_so_luong"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="5 ly"
        android:textColor="@color/colorTextInfo"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_don_gia"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:text="1k"
        android:textColor="@color/colorTextMoney"
        android:textSize="11sp"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/btn_delete_mon_order"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="#00990800"
        android:src="@drawable/ic_delete" />
</LinearLayout>