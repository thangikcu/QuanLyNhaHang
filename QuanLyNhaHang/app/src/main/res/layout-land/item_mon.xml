<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_item_mon"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_mon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:padding="4dp"
        android:src="@drawable/ic_food" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_ten_mon"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:lines="1"
            android:maxLines="1"
            android:scrollbars="horizontal"
            android:text="Cà phê sữa"
            android:textColor="@color/colorTextTenMon"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_don_gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="15.000/ly"
            android:textColor="@color/colorTextMoney"
            android:textSize="@dimen/text_size_small"
            android:textStyle="italic" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/RatingBar"/>
    </LinearLayout>
</LinearLayout>