<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_thong_tin_dat_ban"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="@string/info_thong_tin_dat_ban"
        android:textColor="@color/colorTextThongTinBan"
        android:textSize="12sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSeparatorThongTinDatBan" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_ten_khach_hang"
                    android:textColor="@color/colorTextThongTinDatBan"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_ten_khach_hang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="Nguyễn Văn Nam"
                    android:textColor="@color/colorTextInfo"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_so_dien_thoai"
                    android:textColor="@color/colorTextThongTinDatBan"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_so_dien_thoai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="0915194096"
                    android:textColor="@color/colorTextInfo"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_khoang_gio_den"
                    android:textColor="@color/colorTextThongTinDatBan"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_khoang_gio_den"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="07:25 SA - 22/12/2016"
                    android:textColor="@color/colorTextInfo"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_yeu_cau"
                    android:textColor="@color/colorTextThongTinDatBan"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_yeu_cau"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:isScrollContainer="true"
                    android:maxLines="3"
                    android:paddingLeft="16dp"
                    android:scrollbars="vertical"
                    android:text="Bàn cạnh cửa sổ,Bàn cạnh cửa sổ"
                    android:textColor="@color/colorTextInfo"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </TableRow>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
