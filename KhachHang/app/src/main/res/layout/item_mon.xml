<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/bg_list_item"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_mon"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_food" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_ten_mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isScrollContainer="true"
                android:lines="1"
                android:maxLines="1"
                android:scrollbars="horizontal"
                android:text="Cà phê sữa"
                android:textColor="@color/colorTextTenMon"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/tv_don_gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15.000/ly"
                android:textColor="@color/colorTextMoney"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TableRow
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/RatingBar" />

                <TextView
                    android:id="@+id/tv_point_rating"
                    android:paddingLeft="4dp"
                    style="@style/CommonTextView"
                    android:typeface="serif"
                    android:textColor="@color/colorTextInfo"
                    android:textSize="9sp"
                    android:text="(15,3/6)" />
            </TableRow>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>